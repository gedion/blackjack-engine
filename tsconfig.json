{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "declaration": true,
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
